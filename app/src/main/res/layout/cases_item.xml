<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/dateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Date : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/iv"
        app:layout_constraintStart_toEndOf="@+id/dateTv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirmedTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Total Confirmed : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateET" />

    <TextView
        android:id="@+id/confirmedEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/iv"
        app:layout_constraintStart_toEndOf="@+id/confirmedTv"
        app:layout_constraintTop_toBottomOf="@+id/dateET" />


    <TextView
        android:id="@+id/deceasedTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Total Deceased : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmedEt" />

    <TextView
        android:id="@+id/deceasedEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toStartOf="@+id/iv"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/deceasedTv"
        app:layout_constraintTop_toBottomOf="@+id/confirmedEt" />

    <TextView
        android:id="@+id/recoveredTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Total Recovered : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deceasedEt" />

    <TextView
        android:id="@+id/recoveredEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/iv"
        app:layout_constraintStart_toEndOf="@+id/recoveredTv"
        app:layout_constraintTop_toBottomOf="@+id/deceasedEt" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_star_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="2dp"
        app:layout_constraintTop_toBottomOf="@+id/recoveredEt"
        android:background="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>